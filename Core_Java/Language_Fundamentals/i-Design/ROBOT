
import java.util.*;
public class Main{
	
	public static void main(String[] args) {
		Scanner input=new Scanner(System.in);
		System.out.println("Enter the Name:");
		String name=input.next();
		System.out.println("Enter the Creator Name:");
		String creator_name=input.next();
		System.out.println("Enter the Purpose:");
		String purpose=input.next();
		System.out.println("Memory Space: ");
		int memory_space=input.nextInt();
		System.out.println("Speed");
		double speed=input.nextDouble();
		System.out.println("My Details:");
		System.out.println("I am the Robot named "+name);
		System.out.println("I was created by "+creator_name);
		System.out.println("I am created for the purpose of "+purpose);
		System.out.println("My memory space is around 22Gb and my spped is "+speed+"Tb");
		
	}
	
}

